@using MvcProject.Models.Entity
@model List<Tbl_Musteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
            {
                <p>
                   <b>Aranacak Mşteri Adı: </b>  @Html.TextBox("p")
                <input  type="submit" value="Ara"/>    
                </p>
            }



<table class="table table-bordered">
    <tr>
        <th> Müşteri Id  </th>
        <th> Müşteri Ad  </th>
        <th> Müşteri  </th>
        <th> İşlemler  </th>
        <th> Alert  </th>

    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MusteriId</td>
                <td> @item.MusteriAd</td>
                <td>@item.MusteriSoyad</td>
                <td>

                    <a href="/Musteri/Sil/@item.MusteriId" class="btn btn-danger">Sil</a>
                    <a href="/Musteri/MusteriGetir/@item.MusteriId" class="btn btn-success">Guncelle</a>
                </td>
                <td>
                    @Html.ActionLink("Sil", "Sil", new { id= item.MusteriId }, new { @class = "btn btn-warning", onclick = "return confirm('Gerçekten silmek istiyor musunuz?')" })
                </td>
            </tr>

        }
    </tbody>
</table>
<a href="/Musteri/Ekle" class="btn btn-primary"> Ekle</a>