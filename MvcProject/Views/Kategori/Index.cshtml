@using MvcProject.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Tbl_Kategoriler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th> Kategori Id </th>
        <th> Kategori Ad </th>
        <th> İşlemler </th>

    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.KategoriId </td>
                <td> @item.KategoriAd </td>
                <td>

                    <a href="/Kategori/Sil/@item.KategoriId" class="btn btn-danger">Sil</a>
                    <a href="/Kategori/KategoriGetir/@item.KategoriId" class="btn btn-success">Guncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>



@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))


<a href="/Kategori/Ekle" class="btn btn-primary"> Ekle</a>