@using MvcProject.Models.Entity
@model List<Tbl_Urunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th> Ürün Id  </th>
            <th> Ürün Ad  </th>
            <th> Markası  </th>
            <th> Kategori  </th>
            <th> Fiyat  </th>
            <th> Stok  </th>
            <th> İşlemler  </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UrunId</td>
                <td> @item.UrunAd</td>
                <td>@item.Marka</td>
                <td> @item.Tbl_Kategoriler.KategoriAd</td>
                <td>@item.Fiyat</td>
                <td> @item.Stok</td>
                <td>

                    <a href="/Urun/Sil/@item.UrunId" class="btn btn-danger">Sil</a>
                    <a href="/Urun/UrunGetir/@item.UrunId" class="btn btn-success">Guncelle</a>
                </td>
            </tr>

        }
    </tbody>
</table>
<a href="/Urun/Ekle" class="btn btn-primary"> Ekle</a>

<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" rel="stylesheet" />

<script>
    $('#tbl1').DataTable();
</script>