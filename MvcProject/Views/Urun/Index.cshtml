@using MvcProject.Models.Entity
@model List<Tbl_Urunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th> Ürün Id  </th>
        <th> Ürün Ad  </th>
        <th> Markası  </th>
        <th> Kategori  </th>
        <th> Fiyat  </th>
        <th> Stok  </th>
        <th> İşlemler  </th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UrunId</td>
                <td> @item.UrunAd</td>
                <td>@item.Marka</td>
                <td> @item.Tbl_Kategoriler.KategoriAd</td>
                <td>@item.Fiyat</td>
                <td> @item.Stok</td>
                <td>

                    <a href="/Urun/Sil/@item.UrunId" class="btn btn-danger">Sil</a>
                    <a href="/Urun/UrunGetir/@item.UrunId" class="btn btn-success">Guncelle</a>
                </td>
            </tr>

        }
    </tbody>
</table>
<a href="/Urun/Ekle" class="btn btn-primary"> Ekle</a>