@model MvcProject.Models.Entity.Tbl_Urunler
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Ekle</h2>

<form class="form-group" method="post">
    <div>
        <label>Ürün Ad</label>
        <input type="text" class="form-control" name="UrunAd" />
    </div>
    <div>
        <label>Marka </label>
        <input type="text" class="form-control" name="Marka" />
    </div>
   
    <div>
        <label>Ürün Kategorisi </label>
        @Html.DropDownListFor(m => m.Tbl_Kategoriler.KategoriId, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })

    </div>
    <div>
        <label>Fiyat </label>
        <input type="text" class="form-control" name="Fiyat" />
    </div>
    <div>
        <label>Stok </label>
        <input type="text" class="form-control" name="Stok" />
    </div>
    <div style="margin-top: 15px;">
        <button class="btn btn-info "> Ürün Ekle</button>
    </div>
</form>
